<h1><%= @division.division_name %></h1>

<% if @employees.any? %>
<ul>
  <% @employees.each do |employee| %>
  <li><%= link_to employee.product.name, division_employee_path(@division) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no employees yet!</p>
<% end %>

<p><%= link_to "Add a new employee", new_division_employee_path(@division) %></p>




<p><%= link_to "Edit", edit_division_path(@division) %></p>
<p><%= link_to "Delete", division_path(@division),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to divisions", divisions_path %></p>
